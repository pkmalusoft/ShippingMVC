@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PlainLayout</title>

    <style>
        .contentdiv table
        {
            margin:0 auto;
        }

        .contentdiv h2
        {
            margin:0 auto;
        }
       
        body 
        {
            font-family:Calibri;
        }

    
    </style>

     <script src="~/Content/jQuery-2.1.3.min.js"></script>
    <script src="@Url.Content("~/MyJsFiles/PrintReportInvoices.js")"></script>
   <script type="text/javascript">



       function printDiv(divName) {
           var printContents = document.getElementById(divName).innerHTML;
           var originalContents = document.body.innerHTML;

           document.body.innerHTML = printContents;

           window.print();

           document.body.innerHTML = originalContents;
       }
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#btnhidden").val(document.referrer.toString());

            $("#btncancel").click(function () {
                window.location.href = $("#btnhidden").val();
            });
        });
    </script>
</head>
<body>
    
        <div id="prtdiv" style="position:absolute;width:70%;left:15%;top:10px">
            @RenderBody()

        </div>
       
    <button id="btncancel">Cancel</button> <button value="print" id="btnprint" onclick="printDiv('prtdiv');">Print</button><input type="hidden" id="btnhidden" />
</body>
</html>
