@model TrueBooksMVC.Models.PaymentTermsVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#PaymentTerm").focus();

        $(":text").css({ "border-radius": "5px" });

        $("#btnsave").click(function () {

            var pay = $("#PaymentTerm").val();
            if (pay == "") {
                $("#alert").show();

                return false;
            }

            else {
                $("#alert").hide();
                return true;
            }

         


        });

    });
</script>


<section class="content-header">
    <h1 class="headingfont">Payment Terms</h1>

</section>


<section class="content">
@using (Html.BeginForm())
{   
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
      <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
    <fieldset>
      

         <div class="row no-margin">
             <div class="col-md-3">
                 <label class="required headinglabel">Payment Terms</label>
                   @Html.TextBoxFor(model => model.PaymentTerm,new { @class = "form-control txttarget" })
            @Html.ValidationMessageFor(model => model.PaymentTerm)
             </div>
         </div>
       

      
        <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                    
                                <input type="submit"  value="Save"  class="btn btn-primary btnwidth" id="btnsave" />
                               
                            &nbsp; 
                                           <a href='@Url.Action("Index", "PaymentTerms", new { id = 0 })' class="btn btn-primary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                           
                        </div>
                    </div>
    </fieldset>
}

</section>

