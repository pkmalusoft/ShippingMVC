@model IEnumerable<DAL.PurchaseInvoice>

@using TrueBooksMVC.Models
@using System.Linq
@using DAL

@{
    Layout = null;
    SHIPPING_FinalEntities entity = new SHIPPING_FinalEntities();

}
<script type="text/javascript">

     $(document).ready(function () {

         $('#dataTables-example tfoot th').each(function () {
             var title = $(this).text();
             $(this).html('<input type="text"  style="width:90%" />');
         });


         var table = $('#dataTables-example').DataTable();

         table.draw();
         table.columns().every(function () {
             var that = this;

             $('input', this.footer()).on('keyup change', function () {
                 if (that.search() !== this.value) {
                     that
                         .search(this.value)
                         .draw();
                 }
             });
         });
     });
</script>

<div id="divgridJob" class="row" runat="server" style="min-height: 250px; padding: 5px; margin-right: auto; margin-left: auto;">
    <div class="col-md-12">
        <div class=" box-primary">
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="tab-content">
                            <div class="panel panel-danger">
                                <div class="panel-body">
                                    <table class="table table-responsive table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Invoice No.</th>
                                                <th>Invoice Date</th>
                                                <th>Due Date</th>
                                                <th>Supplier</th>
                                                <th style="width: 10%">Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Invoice No.</th>
                                                <th>Invoice Date</th>
                                                <th>>Due Date</th>
                                                <th>Supplier</th>
                                                <th style="width: 10%"></th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="tdtarget">@Html.DisplayFor(modelItem => item.PurchaseInvoiceID)</td>
                                                    <td class="tdtarget">@Html.DisplayFor(modelItem => item.PurchaseInvoiceNo)</td>
                                                    <td class="tdtarget">@Html.DisplayFor(modelItem => item.PurchaseInvoiceDate, "{0:dd/MMM/yyyy}")</td>
                                                    <td class="tdtarget">@Html.DisplayFor(modelItem => item.DueDate, "{0:dd/MMM/yyyy}")</td>
                                                    <td class="tdtarget">@Html.DisplayFor(modelItem => item.Remarks)</td>
                                                    <td style="width: 10%">
                                                        <a href='@Url.Action("Invoice", "PurchaseInvoice", new { id = item.PurchaseInvoiceID })' data-toggle="tooltip" data-placement="right" title="Edit"><i class="fa fa-pencil"></i></a> &vert;&nbsp;&nbsp;&nbsp;
                                                        @*<a href='@Url.Action("DeleteJob", "Job", new { id = item.JobID })' data-toggle="tooltip" data-placement="right" title="Delete"><i class="fa fa-times-circle"></i></a>| *@
                                                        <a href="#" onclick="DeleteInvoice(InvoiceId=@item.PurchaseInvoiceID)"><i class="fa fa-times"></i></a>&vert;&nbsp;&nbsp;&nbsp;
                                                        @if (item.PurchaseInvoiceID > 0)
                                                        {
                                                            <a href='@Url.Action("ReportInvoice", "ReportInvoice", new { id = item.PurchaseInvoiceID })' data-toggle="tooltip" data-placement="right" title="Print"><i class="fa fa-print"></i></a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>