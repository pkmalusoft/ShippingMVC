            var ProductSelect = $('.Product_demo_class').attr('id', 'Product_' + i).attr('name', 'Product_' + i).parent().html().replace("Product_demo_class");
            var data = "<tr><td><span id='snum" + i + "'>" + count + ".</span></td>";
            data += "<td><input type='text' id='Description_" + i + "' name='Description_" + i + "' style='width: 110px'/></td> <td><input type='text' id='Quantity_" + i + "' name='Quantity_" + i + "' style='width: 47px'/></td><td>" + unitSelect + "</td><td><input type='text' id='Rate_" + i + "' name='Rate_" + i + "'style='width: 60px;text-align:right' class='two-decimals' /></td><td> <input type='text' id='RateFC_" + i + "' name='RateFC_" + i + "' style='width: 60px;text-align:right' class='two-decimals'/></td><td><input type='text' id='Value_" + i + "' name='Value_" + i + "' style='width: 60px;text-align:right' class='two-decimals' /></td><td><input type='text' id='ValueFC_" + i + "' name='ValueFC_" + i + "' style='width: 65px;text-align:right' class='two-decimals'/></td><td><input type='text' id='Taxpre_" + i + "' name='Taxpre_" + i + "' style='width: 60px;text-align:right' class='two-decimals'/></td><td><input type='text' id='Tax_" + i + "' name='Tax_" + i + "' style='width: 60px;text-align:right'/></td><td><input type='text' id='NetValue_" + i + "' name='NetValue_" + i + "' style='width: 60px; text-align:right' class='two-decimals'/></td><td>" + AccountHeadSelect + "</td><td>" + JobSelect + "</td><td>" + ProductSelect + "</select></td><td><button type='button' class='delete' >-</button>&nbsp;&nbsp;<button type='button' index='" + i + "' class='addmore'>+</button></td></tr>"
            $('#charges_table').append(data);
        }
        $("#charges_table").on('click', '.addmore', function () {
            AddNewRow();
        });

        $(".topbutton").on('click', function () {
            AddNewRow();
        });

      

        var InvoiceId = $('#PurchaseInvoiceID').val();
        if (InvoiceId != 0 && InvoiceId != "") {
            $.ajax({
                type: "GET",
                url: "/PurchaseInvoice/GetPurchaseInvoiceDetailsByInvoiceId",
                datatype: "Json",
                data: { InvoiceId: $('#PurchaseInvoiceID').val() },
                success: function (data) {
                    debugger;
                    if (data.length > 0) {
                        $('#charges_table tr:nth-child(2)').remove();
                    }

                    count = $('#charges_table tr').length;
                    index = $(this).attr('index');
                    i = count;

                    var vInvoiceDetails = JSON.parse('[]');
                    for (var i = 0; i < data.length; i++) {
                        var InvoiceDetailsObj = data[i];
                        var InvoiceDetailStr = JSON.stringify(InvoiceDetailsObj);
                        vInvoiceDetails.push(InvoiceDetailStr);
                        var unitSelect = $('.Unit_demo_class').attr('id', 'Unit_' + i).attr('name', 'Unit_' + i).parent().html().replace("Unit_demo_class", "");
                        var AccountHeadSelect = $('.AccountHead_demo_class').attr('id', 'AcHead_' + i).attr('name', 'AcHead_' + i).parent().html().replace("AccountHead_demo_class", "");
                        var JobSelect = $('.Job_demo_class').attr('id', 'Job_' + i).attr('name', 'Job_' + i).parent().html().replace("Job_demo_class");
                        var ProductSelect = $('.Product_demo_class').val(InvoiceDetailsObj.ProductID).attr('id', 'Product_' + i).attr('name', 'Product_' + i).parent().html().replace("Product_demo_class");
                        var tdata = "<tr><td><span id='snum" + i + "'>" + count + ".</span></td>";
                        tdata += "<td><input type='text' id='Description_" + i + "' name='Description_" + i + "' style='width: 110px' value='" + InvoiceDetailsObj.Description + "' /></td ><td><input type='text' id='Quantity_" + i + "' name='Quantity_" + i + "' style='width: 47px' value='" + InvoiceDetailsObj.Quantity + "' /></td><td>" + unitSelect + "</td><td><input type='text' id='Rate_" + i + "' name='Rate_" + i + "' style='width: 60px;text-align:right' value='" + InvoiceDetailsObj.Rate + "' class='two-decimals' /></td><td><input type='text' id='RateFC_" + i + "' name='RateFC_" + i + "' style='width: 60px;text-align:right' value='" + InvoiceDetailsObj.RateFC + "' class='two-decimals'  /></td><td><input type='text' id='Value_" + i + "' name='Value_" + i + "' style='width: 60px;text-align:right' value='" + InvoiceDetailsObj.Value + "' class='two-decimals' /></td><td><input type='text' id='ValueFC_" + i + "' name='ValueFC_" + i + "' style='width: 65px;text-align:right' value='" + InvoiceDetailsObj.ValueFC + "' class='two-decimals' /></td><td><input type='text' id='Taxpre_" + i + "' name='Taxpre_" + i + "' value='" + InvoiceDetailsObj.Taxprec + "' style='width: 60px;text-align:right' class='two-decimals'/></td><td><input type='text' id='Tax_" + i + "' name='Tax_" + i + "' style='width: 60px;text-align:right' value='" + InvoiceDetailsObj.Tax + "' class='two-decimals' /></td><td><input type='text' id='NetValue_" + i + "' name='NetValue_" + i + "' style='width: 60px;text-align:right' value='" + InvoiceDetailsObj.NetValue + "' class='two-decimals' /></td><td>" + AccountHeadSelect + "</td><td>" + JobSelect + "</td><td>" + ProductSelect + "</td><td><button type='button' class='delete' >-</button>&nbsp;&nbsp;<button type='button' index='" + i + "' class='addmore'>+</button></td></tr > "
