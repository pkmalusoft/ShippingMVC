                }
            }
        });
    }

    function f1(x) {
        var parenttr = $(x).parent("td").parent("tr");

        var amt = parseInt($(parenttr).find("td").eq(5).text());
        var eamt = parseInt($(x).val());

        if (eamt > amt) {
            alert("The Amount Must Be Equal to Or Less Than Provision Amount");
