            data: { ID: $('#SelectedSupplierID').val(), JobIDList: jobidstring },
            success: function (data) {
                debugger;
                for (var i = 0; i < data.length; i++) {
                    $('#tbl1').append('<tr>' +
                                               '<td>' + data[i].JobCode + ' <input id="" name="CostUpdationDetails[' + i + '].JobCode" value=' + data[i].JobCode + ' type="hidden"></td>' +
