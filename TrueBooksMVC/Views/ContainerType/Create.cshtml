@model DAL.ContainerType

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
     
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ContainerType1").focus();
            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });

            $("#btnsave").click(function () {

                var cont = $("#ContainerType1").val();



                if (cont == "") {
                    $("#alert").show();
                    return false;
                }

                else {
                    $("#alert").hide();
                    return true;
                }


            });
        });
    </script>
}
<section class="content-header">
    <h1 class="headingfont">Container Type</h1>
    
</section>
@if (ViewBag.SuccessMsg != null)
    {
      <script type="text/javascript">
          $(document).ready(function () {
              $.notify("@ViewBag.SuccessMsg", "success");
          });
                                                </script>
    }
@*<p class="cbtnpadding">
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-primary btnwidth"})*@
</p>
<section class="content">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
    <fieldset>
      
        
        <div class="row no-margin"> 
          <div class="col-md-3">
                           <label class="required headinglabel">Container Type</label>  
                         @Html.TextBoxFor(model => model.ContainerType1,new { @class = "form-control txttarget" })
                        @Html.ValidationMessageFor(model => model.ContainerType1)
                           
             </div>
            </div>
       
         <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                           
                                <input type="submit"  value="Save"  class="btn btn-primary btnwidth" id="btnsave" />
                               
                            &nbsp; 
                                           <a href='@Url.Action("Index", "ContainerType", new { id = 0 })' class="btn btn-primary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                           
                        </div>
                    </div>
    </fieldset>
}
    </section> 



