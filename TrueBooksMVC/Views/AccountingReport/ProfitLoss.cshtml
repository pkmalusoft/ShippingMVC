
@{
    ViewBag.Title = "Profit and Loss";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
    var isprint = true;

    string path = Request.Url.AbsolutePath.ToLower();

    if (Convert.ToInt32(Session["UserRoleID"]) > 1)
    {
        TrueBooksMVC.Models.SourceMastersModel obj = new TrueBooksMVC.Models.SourceMastersModel();
       
        isprint = obj.GetDeletepermission(Convert.ToInt32(Session["UserRoleID"]), path);

    }
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .headinglabel {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>
<script src="@Url.Content("~/MyJsFiles/PrintReportInvoices.js")"></script>
<script type="text/javascript">



    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>

<script type="text/javascript">

    $(document).ready(function () {

            var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate);
        var ed = new Date(enddate);

        $("#frmdate").css("border-radius", "5px");
        $("#todate").css("border-radius", "5px");

        $("#frmdate").datepicker({
            dateFormat: 'dd-M-yy',
            changeYear: true, changeMonth: true,
            minDate: sd,
            maxDate: ed,
        });



        $("#todate").datepicker({
            dateFormat: 'dd-M-yy',
            changeYear: true, changeMonth: true,
            minDate: sd,
            maxDate: ed,
        });




        $("#frmdate").css("border-radius", "5px");
        $("#AcHeadID").css("border-radius", "5px");

         $("#btnsearch").click(function () {
             var frm = $("#frmdate").val();
             var dto = $("#todate").val();

             var from = new Date($('#frmdate').val());
             var to = new Date($('#todate').val());
             showLoading();
            //  vaif(rf newfrom = from.getDay() + "/" + from.getMonth() + "/" + from.getFullYear();
            //  var newto = dto.getDay() + "/" + dto.getMonth() + "/" + dto.getFullYear();
            //alert(newfrom);
            //alert(newto);
             if (frm == "") {
                 $("#alert").show();
                 return false;

             }
             else if (dto == "") {
                 $("#alert").show();
                 return false;
             }
             else   if (from > to) {
                 $("#date").show();
                 return false;
             }
             else {
                 $("#alert").hide();
                 $("#date").hide();

                 $.ajax({
                     url: "@Url.Action("GetProfitAndLoss", "AccountingReport")",
                     data: { fdate: frm, tdate: dto},
                     type: "GET",
                     dataType: "json",
                     success: function (data) {
                         hideLoading();
                         $("#result").css("display", "block");
                         $("#error").css("display", "none");
                         $("#result").html(data.view);
                     },
                     error: function () {
                         $("#result").css("display", "none");
                         $("#error").css("display", "block");
                     }
                 });
             }
        });

        function GetCurrentDate() {
            var m_names = new Array("Jan", "Feb", "Mar",
    "Apr", "May", "Jun", "Jul", "Aug", "Sep",
    "Oct", "Nov", "Dec");

            var d = new Date();
            var curr_date = d.getDate();
            var curr_month = d.getMonth();
            var curr_year = d.getFullYear();
            return (curr_date + "-" + m_names[curr_month]
            + "-" + curr_year);
        }

        function GetStartDate() {
            var m_names = new Array("Jan", "Feb", "Mar",
    "Apr", "May", "Jun", "Jul", "Aug", "Sep",
    "Oct", "Nov", "Dec");

            var d = new Date("@Session["FyearFrom"].ToString()");
            var curr_date = d.getDate();
            var curr_month = d.getMonth();
            var curr_year = d.getFullYear();
            return (curr_date + "-" + m_names[curr_month]
            + "-" + curr_year);
        }
          function GetEndDate() {
            var m_names = new Array("Jan", "Feb", "Mar",
    "Apr", "May", "Jun", "Jul", "Aug", "Sep",
    "Oct", "Nov", "Dec");

            var d = new Date("@Session["FyearTo"].ToString()");
            var curr_date = d.getDate();
            var curr_month = d.getMonth();
            var curr_year = d.getFullYear();
            return (curr_date + "-" + m_names[curr_month]
            + "-" + curr_year);
        }
        $("#frmdate").val(GetStartDate());
        $("#todate").val(GetEndDate());
});



</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="" dir="ltr" id="main" runat="server">
        <section class="content-header">
            <h1 class="headingfont">Profit And Loss Account<small></small></h1>

        </section>

        <section class="content">
            <div class="searchdiv">
                <div id="date" style="color:red;display:none;margin-left:10px;">*Please select valid date</div>
                <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
                <div class="row no-margin">


                    <div class="col-md-6">
                        <label class="headinglabel required"> From Date</label>
                        <input type="text" id="frmdate" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="headinglabel required"> To Date</label>
                        <input type="text" id="todate" class="form-control" />
                    </div>
                </div>
                <div class="row no-margin" style="padding-top:10px">
                    <div class="col-md-12 butdivs">
                        <input type="button" value="Generate" id="btnsearch" class="btn btn-primary btnwid" />
                      @if (isprint)
                      {
                        <button id="btnprint" class="btn btn-danger btnwid" onclick="printDiv('result');">Print</button>
                      }
                    </div>

                </div>
            </div>
            <hr />
            <div class="row" style="padding-top:20px">
                <div class="col-md-12" id="result">

                </div>
                <div class="col-md-12" id="error" style="background-color:white;color:#dd4b39;padding:10px">
                    <h1>No Records Found</h1>
                </div>
            </div>





        </section>


    </div>
</div>