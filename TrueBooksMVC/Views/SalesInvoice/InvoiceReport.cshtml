                <tbody>

                    @foreach (var item in Details)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Description </td>
                            <td>
                                @if (@Units.Where(d => d.ItemUnitID == @item.ItemUnitID).FirstOrDefault() == null) { }
