                            <td class="text-right">@products.Where(d => d.ProductID == item.ProductID).FirstOrDefault().TaxPercent </td>
                            <td class="text-right">@item.Tax </td>
                            <td class="text-right">@item.NetValue </td>

                        </tr>
                        i = i + 1;
                    }

                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Sub-Total</strong></td><td class="table-secondary text-right"><strong>@subtotal</strong></td></tr>
