                        </td>
                        <td>
                            <div class="display-3 text-right">Invoice</div>
                            <div class="invoice-date text-right">
                                <strong>Invoice #:</strong> @Invoice.SalesInvoiceNo <br>
                                <strong>Invoice Date:</strong> @Invoice.SalesInvoiceDate.Value.ToString("dd/MM/yyyy")<br>
                                <strong>
                                    Due Date:
                                </strong> @Invoice.DueDate.Value.ToString("dd/MM/yyyy")
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <hr /><br /><br />
            <table style="width:100%">
                <tr>
                    <td style="width:28%;" valign="top">
                        <h3>Bill To:</h3>
                        <address>
                            <strong>
                                @Customer.Customer1
                            </strong><br>@Customer.Address1,<br> @Customer.Address2,<br>@Customer.Address3 . <br>
                            Tel: @Customer.Phone
                        </address>
                    </td>
                    <td style="width:38%;" valign="top">
                        <h3>Reference:</h3>
                        <table>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Quotation No./Date:
                                    </strong>
                                </td>
                                <td>
                                    @Invoice.QuotationNumber/@Invoice.SalesInvoiceDate.Value.ToString("dd-MM-yyyy")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Order No./Date:
                                    </strong>
                                </td>
                                <td>
                                    @Invoice.LPOReference/@Invoice.SalesInvoiceDate.Value.ToString("dd-MM-yyyy")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Sales Man:
                                    </strong>
                                </td>
                                <td>
                                    @ViewBag.Employeename
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td style="width:44%" valign="top">
                        <h3>Payment Details:</h3>
                        <table>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Base Currency:
                                    </strong>
                                </td>
                                <td>
                                    @ViewBag.BaseCurrency
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Invoice Currency:
                                    </strong>
                                </td>
                                <td>
                                    @ViewBag.Currency.CurrencyName
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong class="text-left">
                                        Exchange Rate:
                                    </strong>
