@{
    ViewBag.Title = "Sales Invoice Report";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
    var Invoice = ViewBag.Invoice as DAL.SalesInvoice;
    var Details = ViewBag.Details as IEnumerable<TrueBooksMVC.Models.SalesInvoiceDetail>;
    var Company = ViewBag.Company as DAL.AcCompany;
    var Customer = ViewBag.Supplier as DAL.CUSTOMER;
    var subtotal = Convert.ToDecimal(Details.Sum(d => d.NetValue) - Details.Sum(d => d.Tax)).ToString("0.00");
    var Netval = Convert.ToDecimal(Details.Sum(d => d.NetValue) - ViewBag.Discount).ToString("0.00");
    var i = 1;
    var products = ViewBag.Products as IEnumerable<DAL.ProductService>;
    var Units = ViewBag.itemunit as IEnumerable<DAL.ItemUnit>;

}
<style>
    #reportcls {
        color: #72848c;
    }


        #reportcls > h1, h2, h3, h4, h5, h6 {
            text-transform: uppercase;
            color: #72848c;
            line-height: 1.618;
            font-family: Montserrat,sans-serif !important;
            letter-spacing: .03em;
        }

    address {
        margin-bottom: 1rem !important;
        font-style: normal !important;
        line-height: inherit !important;
    }

    #tbldetail > tbody > tr > td {
        font-weight: 100 !important;
        color: gray;
    }

    .display-3 {
        font-size: 4.5rem;
        font-weight: 300;
        line-height: 1.2;
    }

    .table-secondary {
        background-color: #c8cbcf;
    }
</style>

<section class="content" id="reportcls" ion-content-print @*style="width:70%!important"*@>

    <span style="float:right">
        <input type='button' class="btn btn-primary btn-sm" id='btn' value='Print' onclick="printDiv()">
    </span>

    <h1 style="text-transform: uppercase;
    color: #72848c; line-height: 0.618;">
        Invoice
    </h1>


    <div class="card" style="width:100% !important" id="printmydiv">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="sender-logo"><img src="~/Content/img/TrueBook_white.png" width="200" alt="Logo"></div><div class="sender-details"><address><strong>@Company.AcCompany1</strong><br>@Company.Address1, @Company.Address2<br>@Company.Address3, @Company.CountryMaster.CountryName<br>Tel: @Company.Phone</address></div>
                </div>
                <div class="col-sm-6">
                    <div class="display-3 text-right">Invoice</div>
                    <div class="invoice-date text-right">
                        <strong>Invoice #:</strong> @Invoice.SalesInvoiceNo <br>
                        <strong>Invoice Date:</strong> @Invoice.SalesInvoiceDate.Value.ToString("dd/MM/yyyy")<br>
                        <strong>
                            Due Date:
                        </strong> @Invoice.DueDate.Value.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-4">
                    <h3>Bill To:</h3>
                    <address>
                        <strong>
                            @Customer.Customer1
                        </strong><br>@Customer.Address1, <br>@Customer.Address2<br>@Customer.Address3 <br>
                        Tel: @Customer.Phone
                    </address>
                </div>
                <div class="col-sm-4">
                    <h3>Reference:</h3>
                    <div class="row">
                        <div class="col-md-5">
                            <strong class="text-left">
                                Quotation No./Date:
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @Invoice.QuotationNumber/@Invoice.SalesInvoiceDate.Value.ToString("dd-MM-yyyy")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <strong class="text-left">
                                <strong>Order No./Date: </strong>
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @Invoice.LPOReference/@Invoice.SalesInvoiceDate.Value.ToString("dd-MM-yyyy")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <strong class="text-left">
                                Sales Man:
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @ViewBag.Employeename
                        </div>
                    </div>



                </div>
                <div class="col-sm-4">
                    <h3>Payment Details:</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <strong class="text-left">
                                Base Currency:
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @ViewBag.BaseCurrency
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <strong class="text-left">
                               Invoice Currency:
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @ViewBag.Currency.CurrencyName
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <strong class="text-left">
                                Exchange Rate:
                            </strong>
                        </div>
                        <div class="col-md-7">
                            @Invoice.ExchangeRate
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="card-table table-responsive">
            <table class="table table-hover" id="tbldetail">
                <thead>
                    <tr style="color: #72848c;font-weight:bold">
                        <th style="color: #72848c;font-weight:bold">Product </th>
                        <th style="color: #72848c;font-weight:bold">Description </th>
                        <th style="color: #72848c;font-weight:bold">Unit </th>
                        <th style="color: #72848c;font-weight:bold">Qty </th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Rate Local Currency </th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Rate Foreign Currency </th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Value Local Currency </th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Value Foreign Currency </th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Tax %</th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Tax</th>
                        <th style="color: #72848c;font-weight:bold" class="text-right">Net Value</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Details)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Description </td>
                            <td>
                                @if (@Units.Where(d => d.ItemUnitID == @item.ItemUnitID).FirstOrDefault() == null) { }
                                else
                                {
                                    @Units.Where(d => d.ItemUnitID == @item.ItemUnitID).FirstOrDefault().ItemUnit1
                                }
                            </td>
                            <td>@item.Quantity </td>
                            <td class="text-right">@item.RateLC </td>
                            <td class="text-right">@item.RateFC </td>
                            <td class="text-right">@item.ValueLC </td>
                            <td class="text-right">@item.ValueFC </td>
                            <td class="text-right">@products.Where(d => d.ProductID == item.ProductID).FirstOrDefault().TaxPercent </td>
                            <td class="text-right">@item.Tax </td>
                            <td class="text-right">@item.NetValue </td>

                        </tr>
                        i = i + 1;
                    }

                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Sub-Total</strong></td><td class="table-secondary text-right"><strong>@subtotal</strong></td></tr>
                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Tax</strong></td><td class="table-secondary text-right"><strong>@Convert.ToDecimal(@Details.Sum(d => d.Tax)).ToString("0.00")</strong></td></tr>
                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Discount</strong></td><td class="table-secondary text-right"><strong>@Convert.ToDecimal(@ViewBag.Discount).ToString("0.00")</strong></td></tr>
                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Grand Total</strong></td><td class="table-secondary text-right"><strong>@Netval</strong></td></tr>
                </tbody>
            </table>
        </div>
    </div>
