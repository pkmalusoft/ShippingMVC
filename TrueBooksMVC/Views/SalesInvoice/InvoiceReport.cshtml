                    <tr><td colspan="10" class="text-right" style="font-weight:700!important"><strong>Discount</strong></td><td class="table-secondary text-right"><strong>@Convert.ToDecimal(@ViewBag.Discount).ToString("0.00")</strong></td></tr>
