<script type="text/javascript">
    function DeleteBranch(ID) {
        if (confirm("Are you sure, You want to Delete Sales Invoice?")) {
            window.location.href = "/SalesInvoice/DeleteInvoice/?id=" + ID;
        }
    }

    $(document).ready(function () {


        $("#frmdate").css("border-radius", "5px");
        $("#todate").css("border-radius", "5px");

        var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate);
        var ed = new Date(enddate);

        $("#frmdate").datepicker({
            dateFormat: 'dd-M-yy',
            changeYear: true, changeMonth: true,
            minDate: sd,
            maxDate:ed,
        });

        $("#todate").datepicker({
            dateFormat: 'dd-M-yy',
            changeYear: true, changeMonth: true,
            minDate: sd,
            maxDate:ed,

        });

        $("#frmdate").val(GetCurrentDate());
        $("#todate").val(GetCurrentDate());

        $('#dataTables-example tfoot th:not(:last)').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style="width:90%" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });
        f2();
        table.draw();

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
        showLoading();
        $.ajax({
            url: "@Url.Action("GetSalesInvoice", "SalesInvoice")",
            data: { fdate: $('#frmdate').val(), tdate: $('#todate').val() },
            type: "GET",
            dataType: "json",
            success: function (data) {
                debugger;
                $('#result').html(data.view);
                hideLoading();
            },
            error: function () {
                alert("Failed! An Occur by your Transaction .");
                hideLoading();
            }
        });

        $("#btnsearch").click(function () {
            var frm = new Date($('#frmdate').val());
            var dto = new Date($('#todate').val());
            showLoading();
            if (frm > dto) {
                $("#error").show();
                return false;
            }
            else {
                $("#error").hide();
                //  f2();
                //  table.draw();
                $.ajax({
                    url: "@Url.Action("GetSalesInvoice", "SalesInvoice")",
                    data: { fdate: $('#frmdate').val(), tdate: $('#todate').val() },
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        debugger;
                        $('#result').html(data.view);
                        hideLoading();
                    },
                    error: function () {
                        alert("Failed! An Occur by your Transaction .");
                        hideLoading();
                    }
                });
            }
        });
    });


 $("#frmdate").css("border-radius", "5px");
    function GetCurrentDate() {
        var m_names = new Array("Jan", "Feb", "Mar","Apr", "May", "Jun", "Jul", "Aug", "Sep","Oct", "Nov", "Dec");
        var startdate = '@Session["FyearFrom"].ToString()';
        var enddate = '@Session["FyearTo"].ToString()';
        var sd = new Date(startdate);
        var ed = new Date(enddate);
        var str = new Date(startdate);
        var d = new Date();
        var curr_date = d.getDate();
        var curr_month = d.getMonth();
        var curr_year = str.getFullYear();
        return (curr_date + "-" + m_names[curr_month] + "-" + curr_year);
    }

    function f2() {

        $.fn.dataTable.ext.search.push(
function (settings, data, dataIndex) {
    var min = new Date($("#frmdate").val());
    var max = new Date($("#todate").val());

    var cmpdate = new Date(data[1]); // use data for the age column
    if (min == max && cmpdate == max) {
        return true;
    }
    else if (cmpdate >= min && cmpdate <= max) {
        return true;
    }
    return false;
}
);
    }
</script>