@model DAL.Department

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
    }

<script type="text/javascript">
        $(document).ready(function () {
            $("#Department1").focus();
            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });

            
            
            $("#btnsave").click(function () {
                var dep = $("#Department1").val();
                
                if (dep == "") {
                    $("#alert").show();
                    return false;
                }
                else {
                    $("#alert").hide();
                    return true;
                }


                });



        });
    </script>


<section class="content-header">
    <h1 class="headingfont">Department</h1>

</section>

 @if (ViewBag.SuccessMsg != null)
    {
      <script type="text/javascript">
          $(document).ready(function () {
              $.notify("@ViewBag.SuccessMsg", "success");
          });
                                                </script>
    }
<section class="content">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
      
         <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
         <div class="row no-margin"> 
               
             @* <div class="col-md-3">
                          <label class="required headinglabel">Department Id</label>
                       @Html.TextBoxFor(model => model.DepartmentID,new { @class = "form-control txttarget" })
                    @Html.ValidationMessageFor(model => model.DepartmentID)
                        
                 </div>*@
           
             <div class="col-md-3">
                          <label class="required headinglabel">Department</label>
                       @Html.TextBoxFor(model => model.Department1,new { @class = "form-control txttarget" })
                    @Html.ValidationMessageFor(model => model.Department1)
                        
                 </div>
           
            
                 </div>
    
       
        <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                           
                                <input type="submit"  value="Save"  class="btn btn-primary btnwidth" id="btnsave" />
                               
                            &nbsp; 
                                           <a href='@Url.Action("Index", "Department", new { id = 0 })' class="btn btn-primary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                           
                        </div>
                    </div>
    </fieldset>
}
    </section>



