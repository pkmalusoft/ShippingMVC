@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}

<h2>Access Denied</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <br />
                <br />
                <div class="form-group">

                    <div class="alert alert-danger alert-dismissable" role="alert" id="divErrorMessage">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4><i class="icon fa fa-check"></i>You don't have access to this site!</h4>
                        <div id="divFinalError"></div>
                    </div>
                </div>
                <br />
                @Html.ActionLink("CLICK HERE TO LOGIN", "Login", "Login")
            </div>
        </div>
    </div>
}
