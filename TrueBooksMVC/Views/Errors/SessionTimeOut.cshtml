@{
    ViewBag.Title = "SessionTimeout";
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}

<h2 class="text-center">Session Timeout</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <br />
                <br />
                <div class="form-group">

                    <div class="alert alert-danger alert-dismissable" role="alert" id="divErrorMessage">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4>
                            <i class="icon fa fa-check"></i>You have been logged out due to idle time. <br /> Please login again. <br />
                            <a href="/Login/index?Login=true">YES</a>
                            / &nbsp; @Html.ActionLink("NO", "Index", "Login")
                        </h4>
                        <div id="divFinalError"></div>
                    </div>
                </div>
                <br />

            </div>
        </div>
    </div>
}
