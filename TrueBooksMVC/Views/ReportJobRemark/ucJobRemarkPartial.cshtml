@model IEnumerable<DAL.Report_JobRemark_Result>

@{
    Layout = null;
    
}

<style>
    .back {
        background-color: red;
        color: white;
    }

     tfoot {
    display: table-header-group;
    }
</style>

@*<script src="~/Content/jQuery-2.1.3.min.js"></script>*@

 
<script type="text/javascript">
    
     $(document).ready(function () {

         $('#dataTables-example tfoot th').each(function () {
             var title = $(this).text();
             $(this).html('<input type="text"  style="width:90%" />');
         });


         var table = $('#dataTables-example').DataTable();
        
         table.draw();
         table.columns().every(function () {
             var that = this;

             $('input', this.footer()).on('keyup change', function () {
                 if (that.search() !== this.value) {
                     that
                         .search(this.value)
                         .draw();
                 }
             });
         });
     });

    
</script>


<div class="table-responsive" style="padding:10px">
    <table class="table table-responsive table-bordered" id="dataTables-example">
        <thead>
            <tr>
                <th>Job_No</th>
                <th>Job Date</th>
                <th>Shipper</th>
                 <th>Consigner</th>
                 <th>Remark</th>
               
                

            </tr>
        </thead>
        <tfoot>
            <tr>
                  <th>Job_No</th>
                <th>Job Date</th>
                <th>Shipper</th>
                 <th>Consigner</th>
                 <th>Remark</th>
               

            </tr>
        </tfoot>
       
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <th>@item.JobCode</th>
                    <th>@item.JobDate</th>
                    <th>@item.shipper</th>
                    <th>@item.Customer</th>
                    <th>@item.Remarks</th>
                   
                    
                </tr>
            }
        </tbody>
    </table>
</div>
