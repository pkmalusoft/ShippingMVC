@model DAL.AspNetRole

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}

<h2>Role</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>


        @Html.HiddenFor(model => model.Id)

          <div class="row no-margin form-layout"> 
             
             <div class="col-xs-12 col-sm-4">
                            <div class="form-title">
                                  @Html.LabelFor(model => model.Name)
                                  </div>
                   <div class="form-field">
                        @Html.TextBoxFor(model => model.Name,new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
                            </div>
                 </div>
                </div>
       
        <br />
        <br />

        
         <div class="row no-margin buttons">
                        <div class="col-xs-12 align-left">
                           
                                <input type="submit"  value="Edit"  class="btn btn-primary" />
                               
                            &nbsp; 
                                           <a href='@Url.Action("Index", "AddRole", new { id = 0 })' class="btn btn-primary" data-toggle="tooltip" data-placement="right" title="Click here">Back to list</a>
                           
                        </div>
      
    </fieldset>
}



