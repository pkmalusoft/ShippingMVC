@model TrueBooksMVC.Models.AcTypeModel
@{
    ViewBag.Title = "AcType";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 765px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .headinglabel {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>
<script type="text/javascript">
        $(document).ready(function () {
                     $.notify("@ViewBag.ErrorMsg ", "danger");

            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });
            
           
        });
</script>

<section class="content-header">
    <h1 class="headingfont">Account Type</h1>
</section>

<section class="content-header">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset class="searchdiv  sm-width">

            <div class="row no-margin">
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="required headinglabel">Account Type</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.AcType, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(model => model.AcType)
                    </div>
                </div>
             
            
                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="required headinglabel">Account Category</label>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.AcCategoryID, new SelectList(ViewBag.Category, "AcCategoryID", "AcCategory"), "Select", new { @class = "form-control txttarget" })
                        @Html.ValidationMessageFor(model => model.AcCategoryID)

                    </div>
                </div>
            </div>

            <div class="row no-margin" style="padding-top:10px">
                <div class="col-md-12" style="text-align:right;">

                    <input type="submit" value="Update" class="btn btn-primary btnwidth" />
                    &nbsp;
                    <a href='@Url.Action("IndexAcType", "AccountingModule", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

                </div>
            </div>


        </fieldset>
    }

</section>

