@model DAL.AnalysisHeadSelectByID_Result
@{
    ViewBag.Title = "AnalysisGroup";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 500px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $(":text").css({ "border-radius": "5px" });
        $("select").css({ "border-radius": "5px" });

        $("#btnsave").click(function () {
            var acgroup = $("#AnalysisGroupID option:selected").val();
            var head = $("#AnalysisHead1").val();
            var code = $("#AnalysisCode").val();




            if (acgroup == "") {
                $("#alert").show();
                return false;
            }
            else if (head == "") {
                $("#alert").show();
                return false;
            }
            else if (code == "") {
                $("#alert").show();
                return false;
            }

            else {
                $("#alert").hide();
                return true;
            }
        });

    });
</script>
<section class="content-header">
    <h1 class="headingfont">Analysis Head</h1>

</section>


<section class="content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <fieldset class="searchdiv">
        <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
        <div class="row no-margin">

            <div class="col-md-6">
                @Html.HiddenFor(model => model.AnalysisHeadID)
                <label class="required headinglabel">Analysis Group</label>
                @Html.DropDownListFor(model => model.AnalysisGroupID, new SelectList(ViewBag.groups, "AnalysisGroupID", "AnalysisGroup"), "Select", new { @class = "form-control txttarget" })
                @Html.ValidationMessageFor(model => model.AnalysisGroupID)

            </div>
            <div class="col-md-6">
                <label class="required headinglabel">Analysis Head</label>
                @Html.TextBoxFor(model => model.AnalysisHead, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AnalysisHead)

            </div>
        </div>
        <div class="row no-margin" style="padding-top:10px">
            <div class="col-md-6">
                <label class="required headinglabel">Analysis Code</label>
                @Html.TextBoxFor(model => model.AnalysisCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AnalysisCode)

            </div>

        </div>
        <div class="form-group">
            @if (ViewBag.ErrorMsg != null)
            {
                <span class="text-danger">@ViewBag.ErrorMsg</span>
            }
        </div>

        <div class="row no-margin" style="padding-top:10px">
            <div class="col-md-12 butdivs">

                <input type="submit" value="Save" class="btn btn-primary btnwidth" id="btnsave" />

                &nbsp;
                <a href='@Url.Action("IndexExpenseAnalysisHead", "AccountingModule", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

            </div>
        </div>


    </fieldset>
    }
</section>
