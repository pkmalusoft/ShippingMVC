@model TrueBooksMVC.Models.AcTypeModel
@{
    ViewBag.Title = "AcType";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 765px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }

    .headinglabel {
        font-family: Calibri;
        font-size: 16px;
        color: #2b2929 !important;
    }
</style>

<script type="text/javascript">
        $(document).ready(function () {

            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });
             $.notify("@ViewBag.ErrorMsg ", "danger");



            $("#btnsave").click(function () {
                var cat = $("#AcCategoryID option:selected").val();
                var subgrp = $("#AcType").val();





                if (cat == "") {
                    $("#alert").show();
                    return false;
                }
                else
                    if (subgrp == "") {
                    $("#alert").show();
                    return false;
                }
                //else if (code == "") {
                //    $("#alert").show();
                //    return false;
                //}
                else {
                    $("#alert").hide();
                    return true;
                }
            });
        });
</script>
<section class="content-header">
    <h1 class="headingfont">Account Type</h1>

</section>


<section class="content">

    @using (Html.BeginForm())
    {
        @*  @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

        *@


        <div class="searchdiv  sm-width">
            <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
            <fieldset>

                <div class="row no-margin">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label class="required headinglabel">Account Type</label>
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.AcType, new { @class = "form-control required" })
                            @Html.ValidationMessageFor(model => model.AcType)
                        </div>
                    </div>
                  
                  
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label class="required headinglabel">Account Category</label>
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.AcCategoryID, new SelectList(ViewBag.Category, "AcCategoryID", "AcCategory"), "Select", new { @class = "form-control txttarget" })
                            @Html.ValidationMessageFor(model => model.AcCategoryID)

                        </div>
                    </div>
                </div>
                <div class="row no-margin" style="padding-top:10px">
                    <div class="col-md-12" style="text-align:right;padding:10px;">

                        <input type="submit" value="Save" class="btn btn-primary btnwid" id="btnsave" />

                        &nbsp;

                        <a href='@Url.Action("IndexAcType", "AccountingModule", new { id = 0 })' class="btn btn-danger btnwid" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

                    </div>
                </div>


            </fieldset>
        </div>
    }
</section>
