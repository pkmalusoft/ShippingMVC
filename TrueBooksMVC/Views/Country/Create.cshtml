@model DAL.CountryMaster

@{
    ViewBag.Title = "Create";
   Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
   }


<script type="text/javascript">
        $(document).ready(function () {
            $("#CountryName").focus();
            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });


            $("#btnsave").click(function () {
                var conname = $("#CountryName").val();
                var concode = $("#CountryCode").val();
              


                if (conname == "") {
                    $("#alert").show();
                    return false;
                }
                else if (concode == "") {
                    $("#alert").show();
                    return false;
                }
               
                else {
                    $("#alert").hide();
                    return true;
                }


            });



        });
    </script>
<section class="content-header">
    <h1 class="headingfont">Country</h1>

</section>
@if (ViewBag.SuccessMsg != null)
    {
      <script type="text/javascript">
          $(document).ready(function () {
              $.notify("@ViewBag.SuccessMsg", "success");
          });
                                                </script>
    }

<section class="content">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
    <fieldset>
       
         <div class="row no-margin"> 
             
             <div class="col-md-3">
                          <label class="required headinglabel">Country Name</label>
                       @Html.TextBoxFor(model => model.CountryName,new { @class = "form-control txttarget" })
                        @Html.ValidationMessageFor(model => model.CountryName)
                            
             </div>
             <div class="col-md-3">
                          <label class="required headinglabel">Country Code</label>
                         @Html.TextBoxFor(model => model.CountryCode,new { @class = "form-control" })
                         @Html.ValidationMessageFor(model => model.CountryCode)
                          
             </div>
            
       </div>

       
        <div class="row no-margin" style="padding-top:10px">
                        <div class="col-md-12">
                           
                                <input type="submit"  value="Save"  class="btn btn-primary btnwidth" id="btnsave" />
                               
                            &nbsp; 
                                           <a href='@Url.Action("Index", "Country", new { id = 0 })' class="btn btn-primary btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                           
                        </div>
                    </div>

       
    </fieldset>
}
    </section>

