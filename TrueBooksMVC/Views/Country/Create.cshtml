@model DAL.CountryMaster

@{
    ViewBag.Title = "Create";
   Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
   }

<style>
    .headinglabel {
        font-size: 16px;
        color: #2b2929 !important;
        display: inline;
    }

    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 350px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>
<script type="text/javascript">
        $(document).ready(function () {
            $("#CountryName").focus();
            $(":text").css({ "border-radius": "5px" });
            $("select").css({ "border-radius": "5px" });


            $("#btnsave").click(function () {
                var conname = $("#CountryName").val();
                var concode = $("#CountryCode").val();
              


                if (conname == "") {
                    $("#alert").show();
                    return false;
                }
                else if (concode == "") {
                    $("#alert").show();
                    return false;
                }
               
                else {
                    $("#alert").hide();
                    return true;
                }


            });



        });
    </script>
<section class="content-header">
    <h1 class="headingfont">Country</h1>

</section>
@if (ViewBag.SuccessMsg != null)
    {
      <script type="text/javascript">
          $(document).ready(function () {
              $.notify("@ViewBag.SuccessMsg", "success");
          });
                                                </script>
    }

      <section class="content">

          @using (Html.BeginForm())
          {
              @Html.AntiForgeryToken()
              @Html.ValidationSummary(true)
              <div class="searchdiv">
                 
                  <fieldset>
                      <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>
                      <div class="row no-margin">

                          <div class="col-md-12">
                              <label class="required headinglabel">Country Name</label>
                              @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control txttarget" })
                              @Html.ValidationMessageFor(model => model.CountryName)

                          </div>
                          </div>
                      <div class="row no-margin" style="padding-top: 10px">
                          <div class="col-md-6">
                              <label class="required headinglabel">Country Code</label>
                              @Html.TextBoxFor(model => model.CountryCode, new { @class ="form-control" })
                              @Html.ValidationMessageFor(model => model.CountryCode)
                          </div>
                          <div class="col-md-6">
                              <label class="required headinglabel">Country Prefix</label>
                              @Html.TextBoxFor(model => model.CountryPrefix, new { @class ="form-control" })
                              @Html.ValidationMessageFor(model => model.CountryPrefix)
                             <!-- <input type="text" name="country_prefix" class="form-control txttarget">-->
                          </div>
                      </div>


                          <div class="row no-margin" style="padding-top:10px">
                              <div class="col-md-12 butdivs">

                                  <input type="submit" value="Save" class="btn btn-primary btnwid" id="btnsave" />

                                  &nbsp;
                                  <a href='@Url.Action("Index", "Country", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>

                              </div>
                          </div>


</fieldset>
                  </div>
                  }
          </section>

