@{
    Layout = "~/Views/Shared/FormattedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeliveryReportFormatted</title>
     <style>

         body 
        {
            font-family:Calibri;
        }


        #Invoice {
            font-family:Calibri;
        }
        table {
            font-family:Calibri;
        }
    </style>
</head>
<body>
   <div id="Delivery">
            <table width="700px" border="0" style="font-family:Calibri">
                <tr>
                    <td>
                        <center><b><u>DELIVERY NOTE / COLLECTION NOTE</u></b></center>
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>JOB NO.</b> &nbsp; @ViewBag.DJobCode
                    </td>
                </tr>
                <tr>
                    <td>
                        <table border="1" width="699px">

                            <tr>
                                <td width="50%">
                                    <pre style="font-family:Calibri"><b> Collect From </b>&nbsp;  @ViewBag.DCustomer
 <b>Customer Ref</b> &nbsp;
                                    </pre>
                                </td>
                                <td>
                                                                <pre style="font-family:Calibri"><b> B/L No </b>&nbsp; @ViewBag.DMBL
                             <b>B.E.No </b>&nbsp; @ViewBag.DBIllOfEntry</pre>
                                </td>
                            </tr>
                          
                            <tr>
                                <td>
                                    <pre style="font-family:Calibri"> <b>Delivery To</b> 
                                    
 @ViewBag.DCollectionPoint
 @ViewBag.DAddress1
 Tel @ViewBag.DPhone
                                    </pre>
                                </td>
                                 <td>
                                    <pre style="font-family:Calibri"><b> Haulier</b> 


                                    </pre>
                                </td>
                            </tr>
                           

                            <tr>
                                <td>
                                    <pre style="font-family:Calibri"><b>  Place of Reciept               Port of Loading</b>
       @ViewBag.DPortRP                 @ViewBag.DPort
                                    </pre>
                                </td>

                                 <td>
                                    <pre style="font-family:Calibri"><b>   Vessel                          Voyage No</b>
 @ViewBag.DVessel                           @ViewBag.DVoyageNo
                                    </pre>
                                </td>
                            </tr>
                         
                            <tr>
                                <td colspan="2">
                                    <pre style="font-family:Calibri"> <b>Place of Discharge       Place of Delivery          Date of Shipment/Arrival </b>
 @ViewBag.DPortDL                     @ViewBag.DDestPort                 @TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(@ViewBag.DArrivalDate)
                                                </pre>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <table width="699px" border="1" style="font-family:Calibri">
                                        <tr>
                                            <td>
                                                <pre style="font-family:Calibri"> <b>Container No / Seal No
 Marks And Numbers</b></pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri"><b> No of Containers 
 or Packages</b></pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri"><b> Description of Packages 
 and Goods</b></pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri"><b> Gross Weight
 (KGS)</b></pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri"><b> Measurement 
 (CBM)</b></pre>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <pre style="font-family:Calibri"> @ViewBag.DMark </pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri">@string.Format("{0:n2}", @ViewBag.DPackages )</pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri"> @ViewBag.DDescription  </pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri">@string.Format("{0:n2}", @ViewBag.Dweight)</pre>
                                            </td>
                                            <td>
                                                <pre style="font-family:Calibri">@string.Format("{0:n2}", @ViewBag.Dvolume) </pre>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <pre style="font-family:Calibri"><b> COLLECTION Date, time,Instructions           Delivery Date, time,Instructions</b>

   @TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat( @ViewBag.DCollectionDate )                            @TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(@ViewBag.DCollectionDate)                              @TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat( @ViewBag.DDeliveryDate)

                                    </pre>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <pre style="font-family:Calibri"><b> COLLECTED By                             RECIEVED By </b>
                                              
 Signed            Date                   Signed             Date

                                         </pre>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <pre style="font-family:Calibri"><b> CONDITION Remarks on Collection                            CONDITION Remarks on Delivery</b>




                                    </pre>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
</body>
</html>
