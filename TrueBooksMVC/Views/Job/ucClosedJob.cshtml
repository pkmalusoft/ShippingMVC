@model IEnumerable<DAL.SP_GetAllClosedJobsDetailsByDate_Result>
@{
    ViewBag.Title = "JobDetails";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<style>
    tfoot {
        display: table-header-group;
    }

    #tbl1 tr {
        height: 35px;
    }
</style>


<script src="~/Content/jquery.dataTables.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text"  style="width:90%" />');
        });


        var table = $('#dataTables-example').DataTable();

        table.draw();
        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });


</script>


  <div id="divgridJob" class="row" runat="server" style="min-height: 250px; padding: 5px; margin-right: auto; margin-left: auto;">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                    <div class=" box-primary">
                        <div class="box-body">
                            <div class="form-group">
                               
                                <div class="row">
                                    <div class="tab-content">
                                        <div class="panel panel-danger">
                                            <div class="panel-body">

                                                <table class="table table-responsive table-striped table-bordered table-hover" id="dataTables-example">
                                                    <thead>
                                                        <tr>
                                                            <th>Job Code</th>
                                                            <th>Job Date</th>
                                                            <th>Job Type</th>
                                                            <th>Shipper</th>
                                                            <th>Consignee</th>
                                                            <th>Customer</th>
                                                            <th>Invoice No</th>
                                                            <th>Invoice Date</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Job Code</th>
                                                            <th>Job Date</th>
                                                            <th>Job Type</th>
                                                            <th>Shipper</th>
                                                            <th>Consignee</th>
                                                            <th>Customer</th>
                                                            <th>Invoice No</th>
                                                            <th>Invoice Date</th>
                                                            <th style="display:none">Action</th>
                                                        </tr>
                                                    </tfoot>

                                           <tbody>

                                                       @foreach (var item in Model)
                                                                        {
                                                                            <tr>
                                                                                  <td>@Html.DisplayFor(modelItem => item.JobCode)</td>
                                                                                <td>@TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(item.JobDate)</td>
                                                                                <td>@Html.DisplayFor(modelItem => item.JobDescription)</td>
                                                                                <td class="tdtarget">@Html.DisplayFor(modelItem => item.Shipper)</td>
                                                                                <td class="textright">@Html.DisplayFor(modelItem => item.Consignee)</td>
                                                                                <td>@Html.DisplayFor(modelItem => item.Customer)</td>
                                                                                 <td>@Html.DisplayFor(modelItem => item.InvoiceNo)</td>
                                                                                     <td>@TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(item.InvoiceDate)</td>
                                                                               <td> <a href="@Url.Action("ClosedJobView","Job", new { @id = item.JobID })"><i class="btn btn-primary btnview">View</i></td>

                                                                            </tr>
                                                                        }
                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>