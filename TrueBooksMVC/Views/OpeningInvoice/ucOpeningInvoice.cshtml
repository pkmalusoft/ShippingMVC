@model IEnumerable<TrueBooksMVC.Models.OpeningInvoiceVM>
@{
    Layout = null;
    
}

<style>
    .back {
        background-color: red;
        color: white;
    }

     tfoot {
    display: table-header-group;
    }
</style>

@*<script src="~/Content/jQuery-2.1.3.min.js"></script>*@

 
<script type="text/javascript">
    
     $(document).ready(function () {

         $('#dataTables-example tfoot th').each(function () {
             var title = $(this).text();
             $(this).html('<input type="text"  style="width:90%" />');
         });


         var table = $('#dataTables-example').DataTable();
        
         table.draw();
         table.columns().every(function () {
             var that = this;

             $('input', this.footer()).on('keyup change', function () {
                 if (that.search() !== this.value) {
                     that
                         .search(this.value)
                         .draw();
                 }
             });
         });
     });

    
</script>


<div class="table-responsive" style="padding:10px">
   <table class="table table-striped table-bordered tblfont" id="dataTables-example">
        <thead>
        <tr>
            
           <th>
                @Html.Label("JobCode")
            </th>
             <th>
                @Html.Label("InvoiceNo")
            </th>
            <th>
                @Html.Label("InvoiceDate")
            </th>
           
            <th>
                @Html.Label("Remark")
            </th>
            <th>
                @Html.Label("Amount")
            </th>
         @*   <th>
                @Html.Label("Action")
            </th>*@
        </tr>
        </thead>

        <tfoot>
             <tr>
             
           <th>
                @Html.Label("JobCode")
            </th>
             <th>
                @Html.Label("InvoiceNo")
            </th>
           
            <th>
                @Html.Label("InvoiceDate")
            </th>
            <th>
                @Html.Label("Remark")
            </th>
            <th>
                @Html.Label("Amount")
               @* <th>
                @Html.Label("Action")
            </th>*@
           
        </tr>
        </tfoot>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                

                 <td class="tdtarget">
                    @Html.DisplayFor(modelItem => item.JobCode)
                </td>
               <td class="tdtarget">
                    @Html.DisplayFor(modelItem => item.invoiceNo)
                </td>
                <td class="tdtarget">
                   @TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(@item.InvoiceDate)
                </td>
                <td class="tdtarget">
                    @Html.DisplayFor(modelItem => item.Remark)
                     </td>
                    <td class="tdtarget">
                    @Html.DisplayFor(modelItem => item.Amount)
                        
                </td>
                @*<td class="tdtarget">
                   <a href="@Url.Action("Edit", new { id = item.AcjournalMasterId })"><i class="fa fa-pencil"></i></a> |
                 

                    <a href="#" onclick="Delete(ID=@item.AcjournalMasterId)"><i class="fa fa-times"></i></a>
                </td>*@
               
            </tr>
        }
        </tbody>

    </table>
</div>
<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete?")) {
            window.location.href = "/OpeningInvoice/DeleteInvoice/?id=" + ID;
        }
    }
</script>