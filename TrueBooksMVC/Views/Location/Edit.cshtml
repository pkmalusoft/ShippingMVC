@model DAL.Location

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<style>
    .searchdiv {
        background-color: #fff;
        width: 100%;
        margin: 0 auto;
        max-width: 700px;
        padding: 20px;
        margin-top: 50px;
        border-radius: 10px;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#Location1").focus();

        $(":text").css({ "border-radius": "5px" });

        $("#btnsave").click(function () {
            var loc = $("#Location1").val();
            var pre = $("#prefix").val();



            if (loc == "") {
                $("#alert").show();
               
                return false;
            }
            else if (pre == "") {
                $("#alert").show();
           
                return false;
            }

            else {
                $("#alert").hide();
                return true;
            }


        });

    });
</script>
<section class="content-header">
    <h1 class="headingfont">Location</h1>
</section>

<section class="content-header">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
  
    <fieldset class="searchdiv">


        <div id="alert" style="color:red;display:none;margin-left:10px;">*Please fill mandatory fields</div>



        <div class="row no-margin">
            <div class="col-md-8">
                <label class="required headinglabel">Location</label>
                @Html.HiddenFor(model => model.LocationID)
                @Html.TextBoxFor(model => model.Location1, new { @class = "form-control txttarget" })
                @Html.ValidationMessageFor(model => model.Location1)

            </div>

            <div class="col-md-4">
                <label class="required headinglabel">Prefix</label>
                @Html.TextBoxFor(model => model.prefix, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.prefix)

            </div>
        </div>
        <div class="row no-margin" style="padding-top:10px">

            <div class="col-md-12">
                <label class="required headinglabel">Country</label>
                @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                <!-- <input type="text" name="country" class="form-control txttarget">-->

            </div>
        </div>
        <div class="row no-margin" style="padding-top:10px">
            <div class="col-md-12 butdivs">

                <input type="submit" value="Update" class="btn btn-primary btnwidth" id="btnsave" />

                &nbsp;
                <a href='@Url.Action("Index", "Location", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
            </div>

        </div>
    </fieldset>
}


    </section>

