            <a href="@Url.Action("Edit", new { id = item.LocationID })"><i class="fa fa-pencil"></i></a> |
           @* <a href="@Url.Action("Delete", new { id = item.LocationID })"><i class="fa fa-times"></i></a>*@

            <a href="#" onclick="DeleteLocation(ID=@item.LocationID)"><i class="fa fa-times"></i></a>
        </td>
