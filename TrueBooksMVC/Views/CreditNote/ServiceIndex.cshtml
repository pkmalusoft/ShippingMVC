@model IEnumerable<TrueBooksMVC.Models.CreditNoteVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<style>
    tfoot {
        display: table-header-group;
    }

    table.dataTable tfoot th {
        padding-left: 10px !important;
    }

    table.dataTable thead th {
        padding-left: 10px !important;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {



        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style="width:100%" />');
        });



        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers", "order": [[0, "desc"]]  });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });



    });

</script>


<section class="content-header">
    <h1 class="headingfont">Credit Note</h1>

</section>


<div class="m-container">
    <p class="indexbtnpadding flex">
        @Html.ActionLink("Create New", "ServiceCreate", null, new { @class = "btn btn-primary btnwidth" })
    </p>
</div>
<section class="content">
    @if (ViewBag.SuccessMsg != null)
    {
        <script type="text/javascript">
         $(document).ready(function () {
             $.notify("@ViewBag.SuccessMsg ", "success");
         });
        </script>
    }
    <div class="table-responsive" style="background-color:#fff;padding:15px">
        <table class="table table-striped table-bordered tblfont" id="dataTables-example">
            <thead>
                <tr>
                    <th>
                        CreditNote Date
                    </th>

                    <th>
                        Client
                    </th>
                    <th>
                        Invoice Number
                    </th>
                    <th>
                        Amount
                    </th>
                    @* <th>Action</th>*@
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>
                        CreditNote Date
                    </th>

                    <th>
                        Client
                    </th>
                    <th>
                        Invoice Number
                    </th>
                    <th class="right_text">
                        Amount
                    </th>
                    @*  <th>Action</th>*@
                </tr>
            </tfoot>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@TrueBooksMVC.Models.CommanFunctions.GetShortDateFormat(item.Date)</td>
                        <td>@item.CustomerName</td>
                        <td>@item.JobNO</td>
                        <td style="text-align:right">@item.Amount.ToString("0.00")</td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>
